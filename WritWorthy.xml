<!-- indent:2
 Because XML as a layout language required deep nesting.
-->

<GuiXml>
  <Controls>
    <!-- lot list window ---------------------------------------------------->
    <TopLevelControl
        hidden="true"
        name="WritWorthyUI"
        movable="true"
        mouseEnabled="true"
        resizeHandleSize="2"
        allowBringToTop="true"
        clampedToScreen="true"
        >
      <Dimensions              x="1135"      y="850" />
      <DimensionConstraints minX="1135"   minY="350"
                            maxX="1135"   maxY="950" />

            <!-- Positive LT/Negative RB offsets allow sliding
               past edge of screen. Negative LT/Positive RB
               offsets inset from edge of screen.
               Neither affect resize. Grr.
             -->
      <ClampedToScreenInsets left="-20" top="-20" right="20" bottom="20" />

      <!-- React to window move/resize -->
      <OnMoveStop>WritWorthy_OnMoveStop()</OnMoveStop>
      <!-- <OnMouseUp>WritWorthy:OnMouseUp()</OnMouseUp> -->
      <OnResizeStop>WritWorthy_OnResizeStop()</OnResizeStop>
      <!--

      <OnUpdate>
        WritWorthy_Update()
      </OnUpdate>

      <OnInitialized>
        WritWorthy_Initialized()
      </OnInitialized>
      -->

      <Controls>
        <Backdrop name="$(parent)BG"
            inherits="ZO_DefaultBackdrop"
            />
        <Label  name="$(parent)WindowTitle"
            text="WritWorthy"
            font="ZoFontWindowTitle"
            color="CFDCBD"
            wrapMode="ELLIPSIS"
            verticalAlignment="TOP">
          <Anchor relativeTo="$(parent)"
              relativePoint="TOPLEFT"
              point="TOPLEFT"
              offsetX="5"
              offsetY="5" />
        </Label>

        <Button name="$(parent)Close"
              alpha="1">
          <Textures
              normal="EsoUI/Art/Buttons/closeButton_up.dds"
              pressed="EsoUI/Art/Buttons/closeButton_down.dds"
              mouseOver="EsoUI/Art/Buttons/closeButton_mouseOver.dds"
              disabled="EsoUI/Art/Buttons/closeButton_disabled.dds"
              />
          <Anchor relativeTo="$(parent)"
              relativePoint="TOPRIGHT"
              point="TOPRIGHT"
              offsetX="0"
              offsetY="0" />
          <Dimensions x="20" y="20" />
          <TextureCoords
              left="0"      top="0"
              right="0.625" bottom="0.625"
              />
          <OnClicked>
            WritWorthy_ToggleUI()
          </OnClicked>
        </Button>
        <!-- lot list ----------------------------------------------->

            <!-- Optional: anchor each resizable list's container
               to the resizable TopLevelControl, to minimize
               layout calculations during resize.
               Then lay out list headers relative to that
               container.
            -->
                          <!-- WritWorthyUIInventoryList -->
        <Control name="$(parent)InventoryList"
            inheritAlpha="true"
            >
          <Anchor relativeTo="$(parent)"
              relativePoint="TOPLEFT"
              point="TOPLEFT"
              offsetX="5"
              offsetY="80" />
          <Anchor relativeTo="$(parent)"
              relativePoint="BOTTOMRIGHT"
              point="BOTTOMRIGHT"
              offsetX="-5"
              offsetY="-70" />
          <Dimensions x="990" y="700" />
          <Controls>
                       <!-- WritWorthyUIInventoryListHeaders -->
            <Control name="$(parent)Headers">
              <Anchor relativeTo="$(parent)"
                  relativePoint="TOPLEFT"
                  point="TOPLEFT" />
              <Anchor relativeTo="$(parent)"
                  relativePoint="TOPRIGHT"
                  point="TOPRIGHT" />
              <Dimensions y="20" />
              <Controls>
                <Control name="$(parent)Type"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT"
                      offsetX="0" />
                  <Dimensions x="100" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Type", "ui_type")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)VoucherCt"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)Type"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="50" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "V", "ui_voucher_ct")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail1"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)VoucherCt"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="300" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Detail 1", "ui_detail1")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail2"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)Detail1"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="150" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Detail 2", "ui_detail2")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail3"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)Detail2"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="150" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Detail 3", "ui_detail3")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail4"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)Detail3"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="150" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Detail 4", "ui_detail4")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail5"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)Detail4"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="100" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Quality", "ui_detail5")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Queue"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)Detail5"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="30" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Q", "ui_is_queued")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Dequeue"
                    inherits="ZO_SortHeader"
                    >
                  <Anchor relativeTo="$(parent)"
                      relativePoint="TOPLEFT"
                      point="TOPLEFT" />
                  <Anchor point="TOPLEFT"
                      relativeTo="$(parent)Queue"
                      relativePoint="TOPRIGHT"
                      offsetX="5"
                      />
                  <Dimensions x="30" y="20" />
                  <OnInitialized>
                    WritWorthy_HeaderInit(self, "Z", "ui_is_queued")
                  </OnInitialized>
                </Control>
              </Controls>
            </Control>                  <!-- InventoryListHeaders -->

                                        <!-- InventoryList itself -->
            <Control name="$(parent)List"
                inherits="ZO_ScrollList">
              <Anchor point="TOPLEFT"
                  relativeTo="$(parent)Headers"
                  relativePoint="BOTTOMLEFT"
                  offsetY="10"
                  />
              <Anchor point="BOTTOMRIGHT"
                  relativeTo="$(parent)"
                  relativePoint="BOTTOMRIGHT"
                  offsetX="-5"
                  offsetY="-100"
                  />
            </Control>
          </Controls>
        </Control>

        <Label  name="$(parent)InventoryListTitle"
            text="Writ Inventory"
            font="ZoFontWinH5"
            color="FFFFFF"
            >
          <Anchor relativeTo="$(parent)InventoryList"
              relativePoint="TOPLEFT"
              point="BOTTOMLEFT"
              offsetX="0"
              offsetY="-5" />
          <Dimensions x="500" y="20" />
        </Label>

      </Controls>
    </TopLevelControl>
    <!-- rows ----------------------------------------------------------->
    <Button name="WritWorthyInventoryListRow"
        virtual="true">
      <Dimensions y="20" />
      <Anchor point="RIGHT"
          relativeTo="$(parent)"
          />
      <Controls>

        <Button name="$(parent)Dequeue"
              alpha="1">
          <Textures
              normal="EsoUI/Art/Buttons/decline_up.dds"
              pressed="EsoUI/Art/Buttons/decline_down.dds"
              mouseOver="EsoUI/Art/Buttons/decline_over.dds"
              />
          <Anchor relativeTo="$(parent)"
              relativePoint="TOPRIGHT"
              point="TOPRIGHT"
              offsetX="-25"
              offsetY="0" />
          <Dimensions x="20" y="20" />
          <TextureCoords
              left="0.0"  top="0.0"
              right="1.0" bottom="1.0"
              />
        </Button>

        <Button name="$(parent)Enqueue"
              alpha="1">
          <Textures
              normal="EsoUI/Art/Buttons/accept_up.dds"
              pressed="EsoUI/Art/Buttons/accept_down.dds"
              mouseOver="EsoUI/Art/Buttons/accept_over.dds"
              />
          <Anchor relativeTo="$(parent)"
              relativePoint="TOPRIGHT"
              point="TOPRIGHT"
              offsetX="-55"
              offsetY="0" />
          <Dimensions x="20" y="20" />
          <TextureCoords
              left="0.0"  top="0.0"
              right="1.0" bottom="1.0"
              />
        </Button>


      </Controls>
    </Button>


  </Controls>
</GuiXml>
